<h1>Listado de localidads</h1>

<table class="table table-stripped">
  <tr>
    <th>Nombre</th>
    <th>Region</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @localidads.each do |localidad| %>
  <tr>
    <td><%= localidad.nombre %></td>
    <td><%= localidad.region_id %></td>
    <td><%= link_to 'ver', localidad %></td>
    <td><%= link_to 'editar', edit_localidad_path(localidad) %></td>
    <td><%= link_to 'eliminar', localidad, method: :delete, data: { confirm: 'Desea eliminar?' } %></td>
  </tr>
<% end %>
</table>

<br />

